{
  "name": "lab-visualizer",
  "version": "0.1.0",
  "description": "High-performance molecular structure visualization with progressive LOD rendering",
  "main": "src/lib/index.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=verbose --reporter=json --outputFile=test-results.json",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "test:e2e": "playwright test",
    "test:smoke": "playwright test --grep @smoke",
    "test:visual": "playwright test --grep @visual",
    "benchmark": "ts-node scripts/benchmark-lod.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run test:coverage",
    "lighthouse:audit": "ts-node scripts/lighthouse-audit.ts",
    "health:check": "curl http://localhost:3000/api/health || echo 'Health check failed'",
    "ci:quality-gate": "node scripts/ci/quality-gate.js",
    "ci:health-check": "node scripts/ci/health-check.js",
    "ci:rollback": "ts-node scripts/rollback.ts",
    "security:audit": "npm audit --audit-level=moderate",
    "security:scan": "node scripts/ci/security-scan.js"
  },
  "keywords": [
    "molecular-visualization",
    "3d-rendering",
    "webgl",
    "lod",
    "performance"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@sentry/nextjs": "^8.0.0",
    "@supabase/ssr": "^0.5.2",
    "@supabase/supabase-js": "^2.45.6",
    "@types/dompurify": "^3.0.5",
    "@vercel/analytics": "^1.1.1",
    "@vercel/speed-insights": "^1.0.2",
    "dompurify": "^3.3.0",
    "express": "^4.18.2",
    "html2canvas": "^1.4.1",
    "ioredis": "^5.3.2",
    "isomorphic-dompurify": "^2.32.0",
    "jspdf": "^3.0.4",
    "next": "^14.2.33",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.53.2",
    "@vercel/kv": "^3.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^5.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.10",
    "chrome-launcher": "^1.1.0",
    "eslint": "^8.0.0",
    "jsdom": "^27.2.0",
    "lighthouse": "^11.4.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.10"
  }
}
