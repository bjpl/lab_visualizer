# Application Configuration
NODE_ENV=development
PORT=3000
NEXT_PUBLIC_APP_VERSION=0.1.0

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
NEXT_PUBLIC_SUPABASE_REGION=us-east-1

# Redis Configuration (Vercel KV)
KV_REST_API_URL=https://your-kv.vercel-storage.com
KV_REST_API_TOKEN=your-kv-token
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security - CSRF Protection
# Generate with: openssl rand -hex 32
CSRF_SECRET=generate_with_openssl_rand_hex_32

# Rate Limiting Configuration
RATE_LIMIT_KEY_PREFIX=rl:

# Monitoring - Sentry
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Vercel Configuration
NEXT_PUBLIC_VERCEL_ENV=development
NEXT_PUBLIC_VERCEL_URL=localhost:3000
NEXT_PUBLIC_VERCEL_GIT_COMMIT_SHA=local

# Database (Supabase provides this)
DATABASE_URL=postgresql://postgres:password@localhost:54322/postgres
